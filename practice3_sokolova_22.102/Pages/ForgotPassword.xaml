<Page x:Class="practice3_sokolova_22._102.Pages.ForgotPassword"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:practice3_sokolova_22._102.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ForgotPassword" Background="White">

    <Grid>
        <TextBlock Text="Введите почту или логин пользователя:" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0, 0, 0, 80"/>
        <TextBox Name="tblEmailLogin" VerticalAlignment="Center" HorizontalAlignment="Center" Width="120"/>
        <Button Name="btnSendCode" Content="Отправить код на почту" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,100,0,0" Width="177" Click="btnSendCode_Click"/>
    </Grid>
</Page>

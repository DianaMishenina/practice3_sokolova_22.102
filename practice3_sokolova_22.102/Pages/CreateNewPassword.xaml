<Page x:Class="practice3_sokolova_22._102.Pages.CreateNewPassword"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:practice3_sokolova_22._102.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="CreateNewPassword" Background="White">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="260"/>
            <ColumnDefinition/>
            <ColumnDefinition Width="260"/>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Row="1" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Новый пароль:"/>
            <TextBox x:Name="tbNewPassword"/>
            <TextBlock Text="Подтверждение пароля:"/>
            <TextBox x:Name="tbConfirmNewPassword"/>

            <Button x:Name="btnSaveNewPassword" Content="Сохранить новый пароль" Width="196" Margin="0, 20, 0, 0" Click="btnSaveNewPassword_Click"/>
        </StackPanel>
    </Grid>
</Page>
